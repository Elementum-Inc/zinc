{{ 'section-modal.css' | asset_url | stylesheet_tag }}
{{ 'et_modal.css' | asset_url | stylesheet_tag }}

{% if section.settings.modal_background_image %}
  {%- style -%}
    .section-modal {
        background: url({{ section.settings.modal_background_image | image_url }});
        background-size: cover;
    }
  {%- endstyle -%}
{% endif %}

<div id="modal-wrapper">
  {% capture blocks %}
    [
      {% for block in section.blocks %}
        {
          "id": "{{ block.id }}",
          "settings": {% if block.type == 'email_form' %}
            {
              {% if block.settings.email_form_code != "" %}"email_form_code": {{ block.settings.email_form_code }},{% endif %}
              "email_form_success_title": "{{ block.settings.email_form_success_title }}",
              "email_form_success_message": "{{ block.settings.email_form_success_message }}",
              "email_form_button_text": "{{ block.settings.email_form_button_text }}"
            }
          {% else %}
            {
              "modal_content_title": "{{ block.settings.modal_content_title }}",
              "modal_content_subtitle": "{{ block.settings.modal_content_subtitle }}",
              "modal_content_body": "{{ block.settings.modal_content_body }}",
              "modal_content_primary_cta_text": "{{ block.settings.modal_content_primary_cta_text }}",
              "modal_content_primary_cta_url": "{{ block.settings.modal_content_primary_cta_url }}",
              "modal_content_secondary_cta_text": "{{ block.settings.modal_content_secondary_cta_text }}",
              "modal_content_secondary_cta_url": "{{ block.settings.modal_content_secondary_cta_url }}"
            }
          {% endif %},
          "shopify_attributes": {{ block.shopify_attributes | json }},
          "type": "{{ block.type }}"
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  {% endcapture %}

  {% comment %} modal {% endcomment %}
    <div id="modal"
      data-settings="{{ section.settings | json | escape }}"
      data-blocks="{{ blocks | strip_newlines | escape }}"
    >
    </div>
</div>

{% schema %}
{
  "name": "Modal",
  "tag": "section",
  "class": "section",
  "max_blocks": 1,
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        }
      ],
      "default": "primary",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "image_picker",
      "id": "modal_background_image",
      "label": "Modal Background Image"
    },
    {
      "type": "range",
      "id": "modal_delay",
      "min": 1000,
      "max": 4000,
      "step": 250,
      "unit": "ms",
      "label": "Delay",
      "default": 2000
    },
    {
      "type": "checkbox",
      "id": "float_modal_content",
      "label": "Float content",
      "default": false      
    },
    {
      "type": "checkbox",
      "id": "modal_content_overlay",
      "label": "Transparent content background",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "modal_content",
      "name": "Modal Content",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "modal_content_title",
          "default": "Modal Title",
          "label": "Modal Title"
        },
        {
          "type": "text",
          "id": "modal_content_subtitle",
          "default": "Modal Subtitle",
          "label": "Modal Subtitle"
        },
        {
          "type": "richtext",
          "id": "modal_content_body",
          "default": "<p>Modal Content</p>",
          "label": "Modal Content"
        },
        {
          "type": "text",
          "id": "modal_content_primary_cta_text",
          "default": "Primary CTA",
          "label": "Primary CTA Title"
        },
        {
          "type": "url",
          "id": "modal_content_primary_cta_url",
          "label": "Primary CTA Link"
        },
        {
          "type": "text",
          "id": "modal_content_secondary_cta_text",
          "default": "Secondary CTA",
          "label": "Secondary CTA Title"
        },
        {
          "type": "url",
          "id": "modal_content_secondary_cta_url",
          "label": "Secondary CTA Link"
        }
      ]
    },
    {
        "type": "email_form",
        "name": "Newsletter Signup",
        "limit": 1,
        "settings": [
          {
            "type": "html",
            "id": "email_form_code",
            "label": "Email Form Embed Code"
          },
          {
            "type": "text",
            "id": "email_form_success_title",
            "label": "Email Form Success Title",
            "default": "Success!"
          },
          {
            "type": "richtext",
            "id": "email_form_success_message",
            "label": "Email Form Success Message",
            "default": "<p>You've been subscribed to our newsletter and will receive updates from us shortly!</p>"
          },
          {
            "type": "text",
            "id": "email_form_button_text",
            "label": "Email Form Button Text",
            "default": "Subscribe"
          }
        ]
      },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Modal"
    }
  ]
}
{% endschema %}
