          }
        },
        "d9ea8272-20ab-4fa1-8544-4718ea428de8": {
          "type": "rating",
          "settings": {
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true
          }
        },
        "76bc7bc3-d767-445e-853f-d787a0da797b": {
          "type": "popup",
          "settings": {
            "text": "Sizing Guide",
            "page": "sizing-guide"
          }
        },
        "collapsible-row-0": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Materials",
            "icon": "leather",
            "content": "",
            "page": ""
          }
        },
        "collapsible-row-1": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Shipping & Returns",
            "icon": "truck",
            "content": "",
            "page": ""
          }
        },
        "collapsible-row-2": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Dimensions",
            "icon": "ruler",
            "content": "",
            "page": "sizing-guide"
          }
        },
        "collapsible-row-3": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Care Instructions",
            "icon": "heart",
            "content": "",
            "page": ""
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "48a8174b-2b0a-4e15-9027-ab3a60140afd",
        "caption",
        "price",
        "description",
        "variant_picker",
        "d9ea8272-20ab-4fa1-8544-4718ea428de8",
        "quantity_selector",
        "buy_buttons",
        "76bc7bc3-d767-445e-853f-d787a0da797b",
        "collapsible-row-0",
        "collapsible-row-1",
        "collapsible-row-2",
        "collapsible-row-3"
      ],
      "settings": {
        "enable_sticky_info": true,
        "media_position": "left",
        "media_size": "medium",
        "gallery_layout": "vertical_thumbnail_left",
        "thumbnail_width": 50,
        "mobile_thumbnails": "show",
        "hide_variants": false,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "",
        "heading_size": "h0",
        "display_style": "grid",
        "products_to_show": 10,
        "columns_desktop": 4,
        "color_scheme": "accent-1",
        "card_color_scheme": "default",
        "image_ratio": "sportrait",
        "show_secondary_image": true,
        "show_price": true,
        "show_vendor": false,
        "show_rating": true,
        "card_hover_show_info": true,
        "columns_mobile": "1",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
