{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
            "title_text_style": "body"
          }
        },
        "48a8174b-2b0a-4e15-9027-ab3a60140afd": {
          "type": "divider",
          "settings": {
            "product_info_divider_length": 150,
            "product_info_divider_width": 1
          }
        },
        "caption": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price",
          "settings": {
            "price_text_style": "body"
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
